<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/colorPrimary">

    </FrameLayout>

    <LinearLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp"
        >

        <ImageView
            android:src="@drawable/logino"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="70dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iconuser"
                android:drawablePadding="10dp"
                android:hint="Usuario"
                android:inputType="textPersonName"
                app:met_baseColor="@color/colorPrimaryDark"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/Passw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iconpass"
                android:drawablePadding="10dp"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                app:met_baseColor="@color/colorPrimaryDark"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="10"
                app:met_singleLineEllipsis="true" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnLogin"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#00C853"
                fancy:fb_focusColor="#9bd823"
                fancy:fb_radius="30dp"
                fancy:fb_text="Ingresar"
                fancy:fb_textColor="#FFFFFF"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_reg"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tienes cuenta? Registrate"/>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/loginButton"
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>


        </LinearLayout>






    </LinearLayout>




</RelativeLayout>



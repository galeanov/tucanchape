<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PerfilFragment"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotoper"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/company"
                android:tint="@color/colorwhite" />
        <TextView
            android:id="@+id/get_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Nombre del Negocio"
            android:textColor="#ffff"
            android:textSize="21sp"
            android:textStyle="bold" />

            <EditText
                android:visibility="gone"
                android:id="@+id/et_name_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Nombre del Negocio"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:background="#fff">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_pho" />

                <TextView
                    android:id="@+id/tel_1_prof"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="TelÃ©fono"
                    android:textSize="18dp"/>

                <ImageView
                    android:id="@+id/call_send"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sendcall"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
            <View
                android:layout_width="310dp"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:background="#fff">


                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_tel" />

                <TextView
                    android:id="@+id/tel_2_prof"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Celular"
                    android:textSize="18dp" />
                <ImageView
                    android:id="@+id/call_send2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sendcall"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
            <View
                android:layout_width="310dp"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:background="#f5f5f5"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:background="#fff">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:id="@+id/dir_prof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Lima, Chosica"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="310dp"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:background="#f5f5f5"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_hor"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Ver horarios"
            android:textSize="15dp"
            android:textColor="@color/cardview_light_background"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

</LinearLayout>







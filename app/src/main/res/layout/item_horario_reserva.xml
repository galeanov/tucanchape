<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape_enabled"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_status"
            android:layout_toLeftOf="@+id/sw_status"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/horario_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 a.m. a 11:00 a.m."
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/usuario_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gonzalo Perez"
                android:textSize="12dp" />

        </LinearLayout>

        <Switch
            android:id="@+id/sw_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

</RelativeLayout>